{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,

    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5",
    "paths": {
      "./Shared/*": [
        "Shared"
      ]
    }
  },
  "exclude": [
    "node_modules/*",
    "Client/node_modules/*",
    "Client/**/*"
  ]
}